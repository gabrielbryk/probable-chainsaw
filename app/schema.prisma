datasource db {
  provider = "sqlite"
  // Wasp requires that the url is set to the DATABASE_URL environment variable.
  url      = env("DATABASE_URL")
}

// Wasp requires the `prisma-client-js` generator to be present.
generator client {
  provider = "prisma-client-js"
}

model User {
    id       Int       @id @default(autoincrement())
    progress Progress?
    hintLogs HintLog[]
}

model Riddle {
    id         Int    @id @default(autoincrement())
    title      String
    difficulty String
    narrative  String
    answer     String
    hint       String
}

model Progress {
    id              Int  @id @default(autoincrement())
    currentRiddleId Int
    attempts        Int
    user            User @relation(fields: [userId], references: [id])
    userId          Int  @unique
}

model HintLog {
    id        Int      @id @default(autoincrement())
    riddleId  Int
    hint      String
    timestamp DateTime
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
}

model EffectEvent {
    id        Int      @id @default(autoincrement())
    type      String
    timestamp DateTime
    details   String
}